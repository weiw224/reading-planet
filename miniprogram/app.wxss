/**app.wxss**/
@import './styles/theme.wxss';

page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.page-container {
  min-height: 100vh;
  background: var(--bg-page);
  padding-bottom: 120rpx;
}

.content-wrapper {
  padding: 30rpx;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--text-hint);
  font-weight: normal;
  margin-left: 12rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.empty-state .icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-state .text {
  font-size: 28rpx;
  color: var(--text-hint);
}
